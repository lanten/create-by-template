{
	"compilerOptions": {
		"module": "commonjs",
		"target": "esnext",
		"outDir": "dist",
		"baseUrl": "./",
		"sourceMap": true,
		"rootDir": ".",
		"strict": true,
		"importHelpers": true,
		// "removeComments": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"suppressImplicitAnyIndexErrors": true,
		"lib": [
			"esnext",
			"es6"
		]
	},
	"include": [
		"types/**/*.ts",
		"src/**/*.ts",
	],
	"exclude": [
		"node_modules",
	]
}